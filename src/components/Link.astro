---
const { link } = Astro.props
const { url } = Astro.props
---
<section>
    {link && <a href= {url}> <h2>{ link }</h2></a>}
    <slot />
</section>

<style>
    section {
        max-width: 700px;
        margin: 0 auto 72px;
    }

    h2{
        margin-bottom: 8px;
        font-weight: 700;
        line-height: 1.5;
        font-size: 1rem;
        color: black;

    }
</style>